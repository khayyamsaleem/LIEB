<header class="signup_header">
  <h1>Signup</h1>
</header>
<main class="signup_content">
  <form
    id="signup-form"
    method="post"
    action="/signup"
    encType="multipart/form-data">
    <div class="form-group">
      <label for="usernameInput">Username:</label>
      <input id="usernameInput" type="text" name="username" />
    </div>
    <div class="form-group">
      <label for="passwordInput">Password:</label>
      <input id="passwordInput" type="password" name="password" />
    </div>
    <div class="form-group">
      <label for="passwordConfirmInput">Confirm Password:</label>
      <input id="passwordConfirmInput" type="password" name="passwordConfirm" />
    </div>
    <div class="form-group">
       <label for="profilePictureInput">Profile Picture:</label>
      <input id="profilePictureInput" accept="image/*" type="file" name="profilePicture" />
    </div>
   <div class="form-button">
     <input type="submit" value="Sign up" />
   </div>
    <div class="form-link">
       <a href="/login">Go back to login</a>
    </div>
  </form>
  <div class="signup_errors">
    {{#if errors}}
      {{#each errors}}
      <ul id="signup_error_list">
        <li id="signup_error"><p>{{ this }}</p></li>
      </ul>
      {{/each}}
    {{/if}}
  </div>
</main>
